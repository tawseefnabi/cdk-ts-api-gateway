{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6"
  },
  "include": [
    "src/"
  ],
  "typedocOptions": {
    "entryPoints":[
      "src/index.ts"
    ],
    "out": "docs"
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
